{% extends "layout.j2" %}

{% block table %}
  <h1>Manage Student Enrollments</h1>

  <div id="browse">
  <table border="1" cellpadding="5">
    <tr>
      <th>Student Enrollment ID</th>
      <th>Student ID</th>
      <th>Student Name</th>
      <th>Course ID</th>
      <th>Course Name</th>
      <th>Course Start Date</th>
      <th>Course End Date</th>
      <th>Is Enrolled</th>
      <th>Certificate ID</th>
    </tr>
    {% for se in student_enrollments %}
      <tr>
        <td>{{se['student_enrollment_id']}}</td>
        <td>{{se['student_id']}}</td>
        <td>{{se['student_name']}}</td>
        <td>{{se['course_id']}}</td>
        <td>{{se['course_name']}}</td>
        <td>{{se['course_start_date']}}</td>
        <td>{{se['course_end_date']}}</td>
        <td>{{se['is_enrolled']}}</td>
        <td>{{se['certificate_id']}}</td>
      </tr>
    {% endfor %}
  </table>
  <p>&nbsp;</p>
  </div> <!-- browse -->
  <div id="insert">
      <form method="POST">
          <legend><strong>Enroll Student</strong></legend>
            <fieldset class="fields">
              <label>Student ID</label> <input type="text" name="student_id">  
              <label>Course ID</label> <input type="text" name="course_id">  
            </fieldset>
            <input class="btn" type="submit" value="Enroll">
            <input class="btn" type="button" value="Clear">
    </form> 
  </div><!-- insert -->
  <p>&nbsp;</p>
  <div id="update">
      <form method="POST">
          <legend><strong>Update Student Enrollment</strong></legend>
            <fieldset class="fields">
              <label>Student ID</label> <input type="text" name="student_id">  
              <label>Course ID</label> <input type="text" name="course_id"> 
              <label>Is Enrolled</label> <input type="text" name="is_enrolled"> 
              <label>Certificate ID</label> <input type="text" name="certificate_id">
            </fieldset>
            <input class="btn" type="submit" value="Update">
            <input class="btn" type="button" value="Clear">
    </form> 
  </div><!-- update -->
  <p>&nbsp;</p>
  <div id="delete" style="display: block">
    <form method="POST">
        <legend><strong>Delete Student Enrollment</strong></legend>
            <fieldset class="fields">
            <p>Are you sure you wish to delete the following?</p>
            <input type="hidden" name="student_enrollment_id" value="1">
            <label>Student Enrollment ID</label> <input type="text" name="student_enrollment_id">  
              
      </fieldset>
      <input class="btn" type="submit" value="Delete">
      <input class="btn" type="button" value="Clear">
    </form> 
  </div><!-- delete -->
{% endblock table %}