{% extends "layout.j2" %}

{% block table %}
  <div id="edit">
		<!-- form to update data in Students-->
		<form id="editPerson" method="POST">
			<legend><strong>Update Student</strong></legend>
			<fieldset>
				<label for="student_id"></label>
				<input type="hidden" value="{{students[0].student_id}}" class="form-control" id="student_id" name="student_id" required>

				<label for="name">Full Name</label>
				<input type="text" class="form-control" id="name" name="name" value="{{students[0].name}}" required>

  			<label for="email">Email</label>
				<input type="text" class="form-control" id="email" name="email"  value="{{students[0].email}}" required>

				<label>Phone Number</label>
				<input type="text" name="phone_number" value="{{students[0].phone_number}}">
				<label for="pronoun"> Pronoun </label>
				<select name="pronoun" id="pronoun">
					<option value={{students[0].pronoun}} selected>{{students[0].pronoun}}</option>
					<option value="" >None</option>
					<option value="She/her/her">She/her/her</option>
					<option value="He/him/his">He/him/his</option>
					<option value="They/them/their">They/them/their</option>
				</select>
				<label>Tutor</label>
				<select id="tutor_id" name="tutor_id">
					<option value="">None</option>
						{% for i in instructors %}
							{% if students[0].tutor_id == i.instructor_id %}
								<option value="{{i.instructor_id}}" selected>{{i.instructor_id}}: {{i.name}}</option>
							{% else %}
								<option value="{{i.instructor_id}}">{{i.instructor_id}}: {{i.name}}</option>
							{% endif %}
						{% endfor %}
				</select>

      </fieldset>
			<a href='/students'><input class="btn" type="button" value="Back"></a>
			<input type="submit" value="Update" name="Edit_Student" class="btn btn-success" style="margin:.5rem;">
    </form>
  </div>
{% endblock table %}