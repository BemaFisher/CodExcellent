{% extends "layout.j2" %}

{% block table %}
  <h1>Manage Students</h1>

<!-- browse -->
  <div id="browse">
  <table border="1" cellpadding="5">
      <thead>
        <tr>
          {% for key in students[0].keys() %}
            <th>{{ key }}</th>
          {% endfor %}
        </tr>
      </thead>
    <tbody>
    {% for student in students %}
        <tr>
            {% for key in student.keys() %}
                <td>{{student[key]}}</td>
            {% endfor %}
        </tr>
    {% endfor %}
    </tbody>
  </table>
  <p>&nbsp;</p>
  </div>
  <!-- insert -->
  <div id="insert">
      <form action="/students" method="POST">
          <legend><strong>Add New Student</strong></legend>
            <fieldset class="fields">
              <label>Full Name</label> <input type="text" name="name" required>
              <label>Email</label> <input type="email" name="email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" required>
              <label>Phone Number</label> <input type="number" name="phone_number">
              <label for="pronoun">Pronoun</label>
                <select name="pronoun" id="pronoun">
                    <option value="">None</option>
                    <option value="She/her/her">She/her/her</option>
                    <option value="He/him/his">He/him/his</option>
                    <option value="They/them/their">They/them/their</option>
                </select>
            </fieldset>
            {% with messages = get_flashed_messages() %}
              {% if messages %}
                <ul class="flashes">
                    {% for message in messages %}
                    <div class="message_flash">{{ message }}</div>
                    {% endfor %}
                </ul>
              {% endif %}
            {% endwith %}
            <input class="btn" type="submit" value="Add">
            <input class="btn" type="button" value="Clear">
    </form>
  </div>
  <p>&nbsp;</p>
{% endblock table %}