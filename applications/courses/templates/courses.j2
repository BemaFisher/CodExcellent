{% extends "layout.j2" %}

{% block table %}
  <h1>Manage Courses</h1>

<!-- browse -->
  <div id="browse">
  <table border="1" cellpadding="5">
      <thead>
      <tr>
          {% for key in courses[0].keys() %}
            <th>{{ key }}</th>
          {% endfor %}
      </tr>
      </thead>
    <tbody>
    {% for course in courses %}
        <tr>
            <td>{{course['course_id']}}</td>
            <td>{{course['course_name']}}</td>
            <td>{{course['level']}}</td>
            <td>{{course['start_date']}}</td>
            <td>{{course['end_date']}}</td>
            {% if course['status'] == 1 %}
                <td>active</td>
            {% else %}
                <td>cancelled</td>
            {% endif %}
        </tr>
        {% endfor %}
    </tbody>
  </table>
      <div>
          {% with messages = get_flashed_messages() %}
              {% if messages %}
                <ul class="flashes">
                    {% for message in messages %}
                    <div class="message_flash">{{ message }}</div>
                    {% endfor %}
                </ul>
              {% endif %}
          {% endwith %}
      </div>
  <p>&nbsp;</p>
  </div>
  <!-- insert -->
  <div>
      <form id="insert" action="/courses" method="POST">
          <legend><strong>Add Course</strong></legend>
          <fieldset class="fields">
              <label>Course name</label>
              <input type="text"  name="course_name" pattern="[A-Za-z]{1,}" required>
              <label for="level">Level</label>
                  <select name="level" id="level">
                      <option value="beginner">beginner</option>
                      <option value="intermediate">intermediate</option>
                      <option value="advanced">advanced</option>
                  </select>
              <label>Start Date</label>
              <input type="date" name="course_start_date" required>
              <label>End Date</label>
              <input type="date" name="course_end_date" required>
              <label>Status</label>
              <select name="status" id="course_status">
                  <option value="1">active</option>
                  <option value="0">cancelled</option>
              </select>
          </fieldset>
          <input class="btn" type="submit" value="Add">
          <input class="btn" type="button" value="Clear">
    </form>
  </div>
<!-- search -->
  <div>
      <form id="search" action="/courses/search" method="POST">
          <legend><strong>Search Course</strong></legend>
        <label>Course Name: </label>
        <input type="text" name="course_name" id="input-course_name-html-search" required>
        <input type="submit">
        <a href='/courses'><button>Reset</button></a>
      </form>
  </div>

{% endblock table %}
